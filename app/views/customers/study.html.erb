<% breadcrumb :study %>
	<div class="main-visual">
		<div class="container">
			<%= render partial: 'customers/breadcrumb' %>
			<div class="row">
				<div class="col-md-offset-1 col-xs-9">
					<div class="row study">
						<div class="col-md-7">
							<section>
								<h1>学習内容</h1>
									<% @courses.each do |course| %>
										<h3><%= course.course %></h3>
										<p class="school-detail-text">
											<%= simple_format(h (course.explanatory_text)) %>
										</p>
										<div class="table-responsive">
											  <table class="table table-striped table-bordered table-hover table-condensed">
												    <thead>
													      <tr>
													        	<th>対象年齢</th><th>授業時間</th>
													      </tr>
												    </thead>
												    <tbody>
													      <tr>
													        	<td>
													        		<%= course.target_age %>
													        	</td>
													        	<td>
													        		<%= course.class_time %>
													        	</td>
													      </tr>
												    </tbody>
											  </table>
										</div><!--/table-responsive-->
									<% end %>
								</section>
						</div>
						<div class="col-md-5">
							<%= image_tag "tablet-study.jpg" ,class: "img-responsive study-image" ,alt: "#" %>
							<%= image_tag "main-qimg-3c10eaf24082fb87a645f667b6e06e98-c.jpeg" ,class: "img-responsive study-image" ,alt: "#" %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
