<%# breadcrumb :customer, @customer %>
	<div class="main-visual">
		<div class="container">
		  <%#= render partial: 'customers/breadcrumb' %>
			<div class="row price">
				<h2>　入力内容をご確認の上、送信ボタンを押してください</h2>
				<div class="col-xs-12">
					<%#= form_for @customer do |f| %>
					<%= form_for(@customer, :html => {:name => :return}) do |f| %>
							<section>
								<table class="contact-form">
									<form>
											<tr>
												<th colspan="2">受講者のお名前</th>
												<td>
													(漢字)
													<%= @customer.customer_last_name %>
													<%= f.hidden_field :customer_last_name %>
													<%= @customer.customer_first_name %>
													<%= f.hidden_field :customer_first_name %>
													(フリガナ)
													<%= @customer.customer_last_name_kana %>
													<%= f.hidden_field :customer_last_name_kana %>
													<%= @customer.customer_first_name_kana %>
													<%= f.hidden_field :customer_first_name_kana %>
												</td>
											</tr>
											<tr>
												<th colspan="2">受講者の性別</th>
												<td>
													<%= @customer.sex %>
													<%= f.hidden_field :sex %>
												</td>
											</tr>
											<tr>
												<th colspan="2">受講者の年齢</th>
												<td>
													<%= @customer.age.age_name %>
													<%= f.hidden_field :age_id %>
												</td>
											</tr>
											<tr>
												<th colspan="2">受講希望コース</th>
												<td>
													<%= @customer.course.course %>
													<%= f.hidden_field :course_id %>
												</td>
											</tr>
											<tr>
												<th colspan="2">タブレット・ノートPCの所有</th>
												<td>
													<%= @customer.pc %>
													<%= f.hidden_field :pc %>
												</td>
											</tr>
											<tr>
												<th colspan="2">電話番号</th>
												<div class="form-group">
												   <td>
												   	   <%= format_phone(@customer.phone) %>
												   	   <%= f.hidden_field :phone %>
												   </td>
												</div>
											</tr>
											<tr>
												<th colspan="2">メールアドレス</th>
												<td>
													<%= @customer.email %>
													<%= f.hidden_field :email %>
												</td>
											</tr>
											<tr>
												<th colspan="2">ご希望の連絡方法</th>
												<td>
													<%= @customer.contact %>
													<%= f.hidden_field :contact %>
												</td>
											</tr>
											<tr>
												<th rowspan="4">住所</th>
												<th class="col2">郵便番号</th>
												<td>
													<%= format_post(@customer.post_code) %>
													<%= f.hidden_field :post_code %>
												</td>
											</tr>
											<tr>
												<th class="col2">都道府県</th>
										            <div class="form-group">
												       <td>
												       	   <%= @customer.region.region %>
												       	   <%= f.hidden_field :region_key %>
												       </td>
										            </div>
											</tr>
											<tr>
												<th class="col2">市区町村</th>
													    <td>
												       	    <%= @customer.city %>
												       	    <%= f.hidden_field :city %>
													   	</td>
													</div>
											</tr>
											<tr>
												<th class="col2">番地<br>マンション名</th>
													   <td>
													   	 <%= @customer.street %>
													   	 <%= f.hidden_field :street %>
													   </td>
											</tr>
											<tr>
												<th colspan="2">保護者様のお名前</th>
													    <td>
															(漢字)<%= @customer.parents_last_name %>
															<%= f.hidden_field :parents_last_name %>
															<%= @customer.parents_first_name %>
															<%= f.hidden_field :parents_first_name %>
															(フリガナ)<%= @customer.parents_last_name_kana %>
															<%= f.hidden_field :parents_last_name_kana %>
															<%= @customer.parents_first_name_kana %>
															<%= f.hidden_field :parents_first_name_kana %>
													    </td>
											</tr>
											<tr>
												<th colspan="2">備考</th>
													    <td>
															<%= @customer.remarks %>
															<%= f.hidden_field :remarks %>
													    </td>
											</tr>
									</form>
								</table>
								<div class="col-md-offset-1 col-md-5">
									<%= f.hidden_field :classwork_id, value: @classwork.id %>
									<%#= f.submit"入力内容を修正する", name: 'back', class:"btn btn-success btn-block btn-lg contact-form-button" %>
									<a href='/classworks/<%= "#{@customer.classwork_id}" %>/?id=contact_form' onclick="document.return.submit();" name= 'back' class="btn btn-success btn-block btn-lg contact-form-button">入力内容を修正する</a>
									<%#= link_to "入力内容を修正する", classwork_contact_form_path(@classwork), onclick: "document.return.submit();", method: :post, class: "btn btn-success btn-block btn-lg contact-form-button" %>
								</div>
								<div class="col-md-5">
									<%= f.submit"入力内容を送信する", class:"btn btn-success btn-block btn-lg contact-form-button" %>
							    </div>
							</section>
					<% end %>
				</div>
			</div>

		</div>
	</div>
