<div class="main-visual">
  <div class="container">
    <div class="row price">
        <h2>パスワードの変更</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
           <div class="col-xs-12">
              <section>
                <table class="contact-form">
                  　<tr>
                      <th colspan="2">変更前のパスワード ※</th>
                      <div class="form-group">
                         <td>
                             <div class="row">
                                  <div class="col-md-6">
                                    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                                      <%= error_messages!(resource,:current_password,"パスワード") %>
                                  </div>
                             </div>
                         </td>
                      </div>
                    </tr>
                    <tr>
                      <th colspan="2">パスワード ※</th>
                      <div class="form-group">
                         <td>
                             <div class="row">
                                  <div class="col-md-6">
                                      <% if @minimum_password_length %>
                                         <em><%= @minimum_password_length %>文字以上</em>
                                      <% end %>
                                      <i> (変更しない場合は入力不要)</i><br />
                                      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"半角英数字 6桁以上" %>
                                      <%= error_messages!(resource,:password,"パスワード") %>
                                  </div>
                             </div>
                         </td>
                      </div>
                    </tr>
                    <tr>
                      <th colspan="2">パスワード確認 ※</th>
                      <div class="form-group">
                         <td>
                             <div class="row">
                                  <div class="col-md-6">
                                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード再入力" %>
                                    <%= error_messages!(resource,:password_confirmation,"パスワード再入力") %>
                                  </div>
                             </div>
                         </td>
                      </div>
                    </tr>
               </table>
                <i>※がついてる箇所は必須項目です。</i>
                <div class="col-md-offset-2 col-md-8">
                  <%= f.submit "変更" , :class => "btn btn-success btn-block btn-lg contact-form-button"%>
                </div>
            </section>
         </div>
        <% end %>
    </div>
  </div>
</div>
