
  <div class="main-visual">
    <div class="container">
      <div class="row price">
        <h2>　ユーザー登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="col-xs-12">
            <section>
              <table class="contact-form">
                <form>
                    <tr>
                      <th colspan="2">お名前 ※</th>
                      <td>
                        <div class="form-inline">
                          <div class="row">
                          <div class="col-md-3">
                            <span>(漢字)</span>
                            <%= f.text_field :last_name, autofocus: true, id:"last_name", :class => "form-control" , :placeholder => "姓"%>
                          </div>
                          <div class="col-md-3 contact-name">
                            <%= f.text_field :first_name, autofocus: true, id:"first_name", :class => "form-control" , :placeholder => "名"%>
                          </div>
                          <div class="col-md-3">
                          <span>(フリガナ)</span>
                            <%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana", :class => "form-control" , :placeholder => "セイ"%>
                          </div>
                          <div class="col-md-3 contact-name">
                            <%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana", :class => "form-control" , :placeholder => "メイ"%>
                          </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <th colspan="2">電話番号 ※</th>
                      <div class="form-group">
                         <td>
                             <div class="row">
                                  <div class="col-md-4">
                                    <%= f.text_field :phone, autofocus: true, id:"phone", :class => "form-control" , :placeholder => "半角数字・ハイフンなし"%>
                                  </div>
                                  <div class="col-md-3 contact-form-phone">
                                      例)000000000
                                  </div>
                             </div>
                         </td>
                      </div>
                    </tr>
                    <tr>
                      <th colspan="2">メールアドレス ※</th>
                      <div class="form-group">
                        <td>
                          <div class="row">
                                    <div class="col-md-4">
                                      <%= f.email_field :email, id:"email", :class => "form-control" , :placeholder => "半角英数"%>
                                    </div>
                                    <div class="col-md-3 contact-form-phone">
                                        例)mama@abc.co.jp
                                    </div>
                            </div>
                        </td>
                      </div>
                    </tr>

                    <tr>
                      <th rowspan="4">住所</th>
                      <th class="col2">郵便番号 ※</th>
                      <div class="form-group">
                        <td>
                          <div class="form-inline">
                            <%= f.text_field :post_code, id:"post_code", name:"user[post_code]", :class => "form-control postcode-form" , maxlength:"7", :placeholder => "1234567" %>
                            <input type="button" id="btn_post_code" class="btn btn-info btn-sm" value="住所の自動入力" onClick="AjaxZip3.zip2addr('user[post_code]','','user[region_key]','user[city]');">
                            </div>
                        </td>
                      </div>
                    </tr>
                    <tr>
                      <th class="col2">都道府県 ※</th>
                              <div class="form-group">
                             <td>
                                 <div class="row">
                                     <div class="col-md-3">
                                      <%= f.text_field :region_key, id:"region", :class => "form-control" , :placeholder => "都道府県" ,name: "user[region_key]"%>
                                     </div>
                                 </div>
                             </td>
                              </div>
                    </tr>
                    <tr>
                      <th class="col2">市区町村 ※</th>
                        <div class="form-group">
                            <td>
                              <%= f.text_field :city, id:"city", name:"user[city]", :class => "form-control contact-form-size" , :placeholder => "市区町村"%>
                            </td>
                        </div>
                    </tr>
                    <tr>
                      <th class="col2">番地<br>マンション名</th>
                        <div class="form-group">
                           <td>
                              <%= f.text_field :street, id: "street", :class => "form-control" , :placeholder => "町域以下住所"%>
                           </td>
                        </div>
                    </tr>
                    <tr>
                      <th colspan="2">パスワード ※</th>
                      <div class="form-group">
                         <td>
                             <div class="row">
                                  <div class="col-md-6">
                                      <%= f.password_field :password, autocomplete: "off", class: "form-control", id:"inputPassword", placeholder:"半角英数字 6桁以上" %>
                                  </div>
                             </div>
                         </td>
                      </div>
                    </tr>
                    <tr>
                      <th colspan="2">パスワード確認 ※</th>
                      <div class="form-group">
                         <td>
                             <div class="row">
                                  <div class="col-md-6">
                                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード再入力" %>
                                  </div>
                             </div>
                         </td>
                      </div>
                    </tr>
                </form>
              </table>
              <i>※がついてる箇所は必須項目です。</i>
              <div class="col-md-offset-2 col-md-8">
                <%= f.submit "新規登録" , :class => "btn btn-success btn-block btn-lg contact-form-button"%>
              </div>
            </section>
          </div>
      <% end %>
      </div>

    </div>
  </div>